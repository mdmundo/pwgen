{
  "image": "mcr.microsoft.com/vscode/devcontainers/rust",
  "customizations": {
    "vscode": {
      "extensions": [
        "vadimcn.vscode-lldb",
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "serayuzgur.crates"
      ]
    }
  },
  "capAdd": ["SYS_PTRACE"],
  "securityOpt": ["seccomp=unconfined"],
  "remoteUser": "root",
  "containerUser": "root",
  "updateRemoteUserUID": true,
  "privileged": true
}
